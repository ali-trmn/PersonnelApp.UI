@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <a href="/Home/Add" class="btn btn-success" style="float: right; margin-bottom:10px; margin-top:10px">Yeni Kayıt Ekle</a>
    </div>
</div>

<div class="row mb-2" ng-controller="HomeController">
    <div class="col-md-6" ng-repeat="users in userList">
        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <p class="d-inline-block mb-2 ">Kullanıcı Id: {{users.id}}</p>
                <h4 class="mb-1">{{users.name}} {{users.surname}}</h4>
                <div class="mb-1 text-muted">Kayıt Tarihi: {{users.createdDate | date:'dd-MM-yyyy'}}</div>
                <p class="card-text mb-auto">Kullanıcı Adı: {{users.username}}</p> 
                <div class="col-md-12">
                    <a href="#" class="btn btn-primary">Düzenle</a>
                    <a href="#" class="btn btn-danger">Sil</a>
                </div>
                
            </div>
            <div class="col-auto d-none d-lg-block">
                <img width="200" height="250" src="https://localhost:7077/{{users.fileName}}" />

            </div>
        </div>
    </div>


    <div class="col-md-12 mt-5 mb-5 text-center" ng-show="userList.length<1">
        <h2> SİSTEMDE KAYITLI KULLANICI BULUNMAMAKTADIR. </h2>
    </div>


</div>

@section Scripts{
    <script src="~/page/home.js"></script>
}